{% extends "base.html.twig" %}

{% block content %}

    <div class="post">
        <div class="post-title">{{ post.title }}</div>
        <div class="post-info">
            Опубликовано  <span class="post-date">{{ post.publishedAt }}</span>
            пользователем <span class="post-author">{{ post.author }}</span>
            в категории   <span class="post-category">{{ post.category_name }}*</span>
        </div>
        <div class="post-image">
        {% if post.image %}
            <img src="/images/articles/{{ post.image }}" alt="{{ post.title }}" width="300">
        {% else %}
            <img src="/images/articles/post-does-not-have-poster.png" alt="{{ post.title }}" width="300">
        {% endif %}
        </div>
        <div class="post-intro">
            {{ post.content | raw }}
        </div>
    </div>



{% endblock %}