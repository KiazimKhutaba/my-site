{% extends "base.html.twig" %}

{% block content %}

    {% for post in posts %}
    <div class="post">

        <div class="post-title">{{ post.title }}</div>

        <div class="post-info">
            <span class="post-author">{{ post.author }}</span>
            <span class="post-date">{{ post.publishedAt }}</span>
            <span class="post-category">{{ post.category_name }}</span>
        </div>

        <div class="post-image">
        {% if post.image %}
            <img src="/images/articles/{{ post.image }}" alt="{{ post.title }}" width="300">
        {% else %}
            <img src="/images/articles/post-does-not-have-poster.png" alt="{{ post.title }}" width="300">
        {% endif %}
        </div>

        <div class="post-intro">
            {{ post.content | striptags | slice(0,250) }}...
        </div>

        <a href="/post/{{ post.url }}" class="post-read-next">Далее</a>

    </div>
    {% endfor %}


    <div class="pagination">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#">...</a>
        <a href="#">10</a>
        <a href="#">11</a>
    </div>

{% endblock %}